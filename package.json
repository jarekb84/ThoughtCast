  "description": "> Capture ideas at the speed of thought. Record, transcribe, and transform your voice into text â€” all offline, all yours.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "node scripts/tauri-dev.js",
    "tauri:build": "node scripts/tauri-build.js local",
    "tauri:build:ci": "node scripts/tauri-build.js ci",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "rust:check": "cd src-tauri && cargo check",
    "rust:test": "cd src-tauri && cargo test",
    "prepare": "husky",
    "knip": "knip --fix-type files,exports,types",
    "precheck:js": "npm run type-check && npm run test",
    "precheck:rust": "npm run rust:check && npm run rust:test",
    "integration-precheck": "npm run precheck:js && npm run precheck:rust"
  },
